<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://koc3.database.windows.net:1433;database=library</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name = "hibernate.connection.username">koc3</property>
        <property name = "hibernate.connection.password">Playstation3</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">update </property>
        <mapping class="com.teal.library.springsecurityjwt.models.AuthorEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.BookEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.BorrowsEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.BranchEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.ChiefEditorEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.CopyEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.DocumentEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.InvEditorEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.JournalIssueEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.JournalVolumeEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.ProceedingsEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.PublisherEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.ReaderEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.ReservesEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.UsersEntity"/>
        <mapping class="com.teal.library.springsecurityjwt.models.WritesEntity"/>
    </session-factory>
</hibernate-configuration>